{
  "name": "MoreThanGoogleTranslate",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "A Chrome Extension not only translate texts but also images.",
  "icons": {
    "16": "image/logo.png",
    "48": "image/logo.png",
    "128": "image/logo.png"
  },
  "author": [
    "malikid"
  ],
  "background": {
    "scripts": [
      "lib/jquery-3.3.1.min.js",
      "js/config.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "image/logo.png",
    "default_title": "MoreThanGoogleTranslate",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/config.js",
        "js/utilities.js",
        "lib/jquery-3.3.1.min.js",
        "js/inject.js"
      ],
      "run_at": "document_end"
    }
  ]
}